{
    "version": "0.2.0",
    "configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Server",
			"runtimeArgs": [ "--nolazy" ],
			"program": "${workspaceRoot}/src/index.ts",
			"stopOnEntry": false,
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/lib/**/*.js"
			],
			"cwd": "${workspaceRoot}"
        }
    ]
}
